@page
@model BulkyWeb_RazorWeb.Pages.Categories.CreateModel

<form method="post">
	<div class="container border">
		<div class=" pt-4 pd-3">
			<div class="row">
				<h1 class="text-primary">Create Category</h1>
				<hr />
			</div>
			@* <div asp-validation-summary="All"></div> *@
			<div class="row">
				<div class="col-6 col-md-3">
					<label asp-for="Categories.Name1"></label>
				</div>
				<div class="col-6 col-md-3">
					<input asp-for="Categories.Name1" placeholder="Enter Name" class="form-control" />
					<span asp-validation-for="Categories.Name1" class="text-danger"></span>
				</div>
			</div>
			<div class="row">
				<div class="col-6 col-md-3 pt-2 pb-2">
					<label asp-for="Categories.DisplayOrder"></label>
				</div>
				<div class="col-6 col-md-3 pt-2 pb-2">
					<input asp-for="Categories.DisplayOrder" placeholder="Enter Order" class="form-control" />
					<span asp-validation-for="Categories.DisplayOrder" class="text-danger"></span>
				</div>
			</div>
			<div class="row">
				@* padding-top , padding-bottom *@
				<div class="col-6 col-md-3 pb-2 ">
					<button type="submit" class="btn btn-primary form-control">Create</button>
				</div>
				<div class="col-6 col-md-3 pb-2">
					<a asp-page="/Categories/Index" class="btn btn-outline-secondary form-control">Back to List</a>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
		//	This is the partial view that contains the validation scripts
	}
}