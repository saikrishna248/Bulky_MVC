@model Category // Creating Class Name 
<style type="text/css">
	.px-2 {
		padding-right: .0rem !important;
		padding-left: .5rem !important;
	}
</style>
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Create Category</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">

		<form method="post" class="row">
			<div class="container border pd-3">
				

					@* <div asp-validation-summary="All"></div> *@
					<div class="row form-floating py-2 col-12 px-2"  >
					
						<input asp-for="Name1" placeholder="Enter Name" class="form-control border-0 shadow" />
						<label asp-for="Name1" class="ms-2"></label>
						<span asp-validation-for="Name1" class="text-danger"></span>
						
					</div>
					<div class="row form-floating py-2 col-12 px-2">	
						<input asp-for="DisplayOrder" placeholder="Enter Order" class="form-control border-0 shadow" />
						<label asp-for="DisplayOrder" class="ms-2"></label>
						<span asp-validation-for="DisplayOrder" class="text-danger"></span>
						
					</div>
					<div class="row pt-4">
						@* padding-top , padding-bottom *@
						<div class="col-6 col-md-3 pb-2 ">
							<button type="submit" class="btn btn-primary form-control">Create</button>
						</div>
						<div class="col-6 col-md-3 pb-2">
							<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
						</div>
					</div>
				
			</div>
		</form>

	</div>
</div>

@section Scripts{
				@{
		<partial name="_ValidationScriptsPartial"></partial>
		//	This is the partial view that contains the validation scripts
				}
		    }